{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi": ["error", "always"],
        "max-lines": ["error", { "max": 200, "skipBlankLines": true, "skipComments": true }],
        "camelcase": ["error", {"properties": "always"}],
        "max-lines-per-function": ["error", { "max": 10 }],
        "no-debugger": "error",
        "no-foo-identifier": "error"
    },
    "ignorePatterns": ["src/**/*.test.js"]
}
